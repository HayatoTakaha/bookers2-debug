<div class='container'>
  <div class='row'>
    <div class='col-md-3'>

      <h2>User info</h2>
      <%= render 'users/info', user: @book.user %>
      <%= render 'layouts/errors', obj: @book %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book_new %>
    </div>
     <div class='col-md-8 offset-md-1'>
      <table class='table table-hover table-inverse'>
  		 <h2>Book detail</h2>
  		  <thead>
  		   <th colspan="3"></th>
  		  </thead>
  		   <tbody>
  		    <tr>
  		     <td>
            <%= link_to user_path(@user.id) do %>
            <%= image_tag @user.get_profile_image(100, 100) %><br>
            <%= @user.name %>
           </td>
            <% end %>
           <td>
            <%= link_to book_path(@book.id) do %>
            <%= @book.title %>
           </td>
            <% end %>
           <td><%= @book.body %></td>
            <% if @book.user == current_user %>
           <td><%= link_to 'Edit', edit_book_path(@book.id), class: "btn btn-sm btn-success" %></td>
           <td><%= link_to 'Destroy', book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？" , class: "btn btn-sm btn-danger" %></td>
            <% end %>
            
            <div>
              <p>コメント数：<%= @book.book_comments.count %></p>
              <% @book.book_comments.each do |book_comment| %>
                <p><%= image_tag book_comment.user.get_profile_image(100,100) %></p>
                <%= book_comment.user.name %>
                <%= book_comment.created_at.strftime('%Y/%m/%d') %><%= book_comment.comment %>
                <% if book_comment.user == current_user %>
                  <%= link_to "削除", book_book_comment_path(book_comment.@book, book_comment), method: :delete %>
                <% end %>
              <% end %>
            </div>
            <div>
              <%= form_with model: [@book, @book_comment] do |f| %>
                <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに" %>
                <%= f.submit "送信する" %>
              <% end %>
            </div>

            <% if @book.favorited_by?(current_user) %>
            <p>
              <%= link_to post_image_favorite_path(@book), method: :delete do %>
                ♥<%= @book.favorites.count %>
              <% end %>
            </p>
            <% else %>
            <p>
              <%= link_to post_image_favorite_path(@book), method: :post do %>
                ♡<%= @book.favorites.count %>
              <% end %>
            </p>
          <% end %>
         </tr>
       </tbody>
      </table>
    </div>
  </div>
</div>