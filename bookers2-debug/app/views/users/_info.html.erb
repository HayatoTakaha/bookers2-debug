<table class="table">
  <tr><%= image_tag user.get_profile_image(100, 100) %></tr>
  <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= user.introduction %></th>
	</tr>
	<tr>
	  <th>follows <td><%= link_to user_followings_path(user) do %>
	  <span><%= user.followings.count %></span>
	  <% end %>
	  </td>
	  </th>
	</tr>
	<tr>
    <th>followers <td><%= link_to user_followers_path(user) do %>
    <span><%= user.followers.count %></span>
    <% end %>
    </td>
    </th>
 </tr>
</table>

<div class='row'>
  <%= link_to edit_user_path(user.id), class:"btn btn-outline-secondary btn-block edit_user_#{user.id}" do %>
    <i class="fas fa-user-cog"></i>
  <% end %>
</div>